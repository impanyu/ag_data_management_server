                      },
                      "internal": {
                        "type": "boolean"
                      },
                      "id": {
                        "type": "string"
                      },
                      "links": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "rel": {
                              "type": "string"
                            },
